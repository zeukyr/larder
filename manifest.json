{
    "name": "Larder",
    "description": "Save recipes, plan meals, generate grocery lists all in one place",
    "version": "1.0",
    "icons": {
        "16": "icons/pantry16.png",
        "48": "icons/pantry48.png",
        "128": "icons/pantry128.png"
},
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
      ],
      "host_permissions": [
        "*://*/*"
      ],    
      "oauth2": {
        "client_id": "tuqbizgfJc7QMF2ZkyFS4ZIAWRdgmv-I7MCWI3dAwKQ",
        "scopes": []
      },    
      "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/pantry128.png"
                  }
      },
      "background": {
        "service_worker": "background.js"
      },
      "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ]
    }
    
  
  